{
  "name": "clients-manager-application",
  "version": "1.0.0",
  "main": "main.js",
  "description": "This desktop application is created to control the flow of customers, income and expenses of money for the provision of cosmetology services.",
  "homepage": "https://github.com/TillDeathCoder/clients-manager-application",
  "author": {
    "name": "Eugene Makareno",
    "email": "eugene.makarenko.work@gmail.com"
  },
  "keywords": [
    "angular 6",
    "electron",
    "typescript",
    "typeorm",
    "bootstrap",
    "fullcalendar",
    "jquery",
    "sqlite3",
    "node.js"
  ],
  "scripts": {
    "build": "npm run postinstall:electron && npm run electron:tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "electron:tsc": "tsc main.ts",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:tsc && electron ./ --serve",
    "electron:local": "npm run build:prod && electron .",
    "electron:linux": "npm run build:prod && npx electron-builder build --linux",
    "electron:windows": "npm run build:prod && npx electron-builder build --windows",
    "electron:mac": "npm run build:prod && npx electron-builder build --mac",
    "start": "npm run createDevDb && npm run postinstall:electron && npm-run-all -p ng:serve electron:serve",
    "ng:serve": "ng serve",
    "ng:serve:web": "npm run postinstall:web && npm run electron:tsc  && ng serve -o",
    "postinstall": "npm run postinstall:electron && npx electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "createDevDb": "node scripts/dev.db.js"
  },
  "private": true,
  "dependencies": {
    "electron-log": "^3.0.5",
    "sqlite3": "^4.0.6",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.7.2",
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular-devkit/core": "^0.7.2",
    "@angular/animations": "^6.1.1",
    "@angular/cdk": "^6.4.2",
    "@angular/cli": "~6.0.3",
    "@angular/common": "^6.1.1",
    "@angular/compiler": "^6.1.1",
    "@angular/compiler-cli": "^6.1.1",
    "@angular/core": "^6.1.1",
    "@angular/forms": "^6.1.1",
    "@angular/http": "^6.1.1",
    "@angular/language-service": "^6.1.1",
    "@angular/material": "^6.4.2",
    "@angular/platform-browser": "^6.1.1",
    "@angular/platform-browser-dynamic": "^6.1.1",
    "@angular/router": "^6.1.1",
    "@fortawesome/fontawesome-free": "^5.3.1",
    "@ng-bootstrap/ng-bootstrap": "3.3.1",
    "@types/jquery": "^3.3.29",
    "@types/node": "~8.9.4",
    "ajv": "^6.9.1",
    "angular-cli-builders": "^2.1.2",
    "bootstrap": "^4.2.1",
    "codelyzer": "~4.2.1",
    "commonjs": "0.0.1",
    "copy-webpack-plugin": "^4.5.2",
    "core-js": "^2.5.4",
    "electron": "^9.4.0",
    "electron-builder": "^20.40.2",
    "electron-reload": "^1.2.5",
    "fs": "0.0.1-security",
    "fullcalendar": "^3.6.1",
    "hammerjs": "^2.0.8",
    "jquery": "^3.4.0",
    "jquery-ui-dist": "^1.12.0",
    "jquery-ui-themes": "^1.12.0",
    "lodash": "^4.17.11",
    "moment": "^2.23.0",
    "ng-fullcalendar": "^1.7.1",
    "ngx-electron": "^2.1.1",
    "ngx-logger": "^3.3.9",
    "npm-run-all": "4.1.3",
    "npx": "^10.2.0",
    "popper.js": "^1.14.6",
    "rxjs": "^6.0.0",
    "stream": "0.0.2",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "wait-on": "2.1.0",
    "zone.js": "^0.8.26"
  }
}
